<p id="notice"><%= notice %></p>

<h1>Wikis</h1>
<% if policy(Wiki.new).show? %>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Title</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.body %></td>
        <td><%= wiki.title %></td>
        <td><%= wiki.image %></td>
        <td><%= wiki.user %></td>
        <% if policy(Wiki.new).create? %>
        <td><%= link_to 'Show', wiki %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
<% end %>