<%= form_for(@wiki) do |f| %>
  <% if @wiki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>

      <ul>
      <% @wiki.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>

    <% if current_user.role == "admin" || current_user.role == "premium" %>
    <div class="form-group">
      <%= f.label :public, class: 'checkbox' do %>
      <%= f.check_box :public, options = {}, checked_value = "1", unchecked_value = "0" %> Public Wiki?
        <% end %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 <% end %>
